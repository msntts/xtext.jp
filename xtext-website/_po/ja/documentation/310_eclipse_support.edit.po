msgid ""
"  public static final String PREFERENCE_KEY =\n"
"    \"ui.outline.filterEntities\";"
msgstr ""

#: ../../../documentation/310_eclipse_support.md:420
msgid ""
"  @Inject\n"
"  private PluginImageHelper imageHelper;"
